extends ../layout 

block content
    
    .container.px-4.px-lg-5.d-flex.h-100.align-items-center.justify-content-center
      .d-flex.justify-content-center
        .text-center
        h1.mx-auto.my-0.text-uppercase.mt-5 ACTUALIZA BICICLETA

    section#Section
    .container.px-4.px-lg-5.d-flex.h-500.align-items-center.justify-content-center.mt-5
        form(action=`/bicicletas/${bici.id}/update` method="post")
            .form-group.row
                label(for="id") ID:
                input#id(type="text", name="id", value=bici.id)
                br
                label(for="color") Color:
                input#color(type="text", name="color", value=bici.color)
                br
                label(for="modelo") Modelo:
                input#modelo(type="text",  name="modelo", value=bici.modelo)
                br
                label(for="lat") Latitud:
                input#modelo(type="text",  name="lat", value=bici.ubicacion[0])
                br
                label(for="lng") Longitud:
                input#modelo(type="text",  name="lng", value=bici.ubicacion[1])
                br
                input.btn.form-control.bg-info.mt-5(type="submit", value="Enviar")
                br

                a.btn.bg-danger.mt-5(href='/bicicletas') Volver 