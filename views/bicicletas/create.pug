extends ../layout 

block content
    
    .container.px-4.px-lg-5.d-flex.h-100.align-items-center.justify-content-center
      .d-flex.justify-content-center
        .text-center
        h1.mx-auto.my-0.text-uppercase.mt-5 NUEVA BICICLETA

    section#Section
    .container.px-4.px-lg-5.d-flex.h-500.align-items-center.justify-content-center.mt-5
        form(action="/bicicletas/create", method="post")
            .form-group.row
                label(for="id") ID:
                input#id(type="text", name="id")
                br
                label(for="color") Color:
                input#color(type="text", name="color")
                br
                label(for="modelo") Modelo:
                input#modelo(type="text",  name="modelo")
                br
                label(for="lat") Latitud:
                input#modelo(type="text",  name="lat")
                br
                label(for="lng") Longitud:
                input#modelo(type="text",  name="lng")
                br
                input.btn.form-control.bg-info.mt-5(type="submit", value="Enviar")
                br

                a.btn.bg-danger.mt-5(href='/bicicletas') Volver 