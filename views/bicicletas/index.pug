extends ../layout




block content
    
    .container.px-4.px-lg-5.d-flex.h-100.align-items-center.justify-content-center.b
      .d-flex.justify-content-center
        .text-center
            h1.mx-auto.my-0.text-uppercase.pt-5.font-weight-bold BICICLETAS CONOCIDAS

    section#Section

        .d-flex.justify-content-center.mx-5
            table.table.mt-5.table-striped.table-dark
                thead
                    tr
                        th(scope=' col') #
                        th(scope=' col') Color
                        th(scope= 'col') Modelo
                        th(scope= 'col') Ubicaci√≥n
                        th(scope= 'col') 
                        th(scope= 'col')
                tbody
                    each bici in bicis
                        tr
                            td(scope='row')
                                = bici.id
                            td= bici.color
                            td= bici.modelo
                            td= bici.ubicacion
                            td
                                a.btn.bg-info(href = 'bicicletas/' + bici.id + '/update') 
                                        = 'Actualizar'
                            td
                                form.inline(method='post' action='bicicletas/' + bici.id + '/delete')  
                                    button.bg-danger(type="submit" name='submit_paran' value='submit_value' class='btn ')
                                        = 'Eliminar' 

                        
    .container.px-4.px-lg-5.d-flex.h-100.align-items-center.justify-content-center.b
        .d-flex.justify-content-center
            .text-center
                a.btn.bg-info.mt-5(href='/bicicletas/create') Nueva Bicicleta 